{
  "name": "HateBlock",
  "version": "1.0.0",
  "author": "Zach Dylag, Yair Levi, Vickie Cheng",
  "manifest_version": 2,
  "description": "Hides toxic comments on Facebook, YouTube, and Reddit",
  "permissions": [
    "http://www.facebook.com/*", "https://www.facebook.com/*", "https://hateblockapi.azurewebsites.net/api/*"
  ],
  "web_accessible_resources": [ "locales/*", "images/*.png"],
  "browser_action": {
    "default_icon": "/icons/HateBlock19.png"
  },
  "icons": {
     "128": "/icons/HateBlock128.png",
     "16": "/icons/HateBlock16.png",
     "48": "/icons/HateBlock48.png"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "homepage_url": "https://github.com/lyair1/ToxicCommentsExtension-hackathon",
  "content_scripts": [
    {
        "matches": ["http://www.facebook.com/*", "https://www.facebook.com/*"],
        "js": ["jquery-3.2.1.min.js",  "logic.js", "facebook.js"],
        "run_at" : "document_idle",
        "all_frames" : false
    },
    {
        "matches": ["http://www.youtube.com/*", "https://www.youtube.com/*"],
        "js" : [ "jquery-3.2.1.min.js", "logic.js", "youtube.js"],
        "run_at" : "document_idle",
        "all_frames" : false
    },
    {
        "matches": ["http://www.reddit.com/*", "https://www.reddit.com/*"],
        "js" : [ "jquery-3.2.1.min.js",  "logic.js", "reddit.js"],
        "run_at" : "document_idle",
        "all_frames" : false
    }
  ]
}
